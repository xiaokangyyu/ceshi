        "max": 10,
        "step": 2,
        "default": 4
      },
      {
        "type": "checkbox",
        "id": "enable_parallax",
        "label": "Enable parallax",
        "default": false
      },
      {
        "id": "enable_full_width",
        "type": "checkbox",
