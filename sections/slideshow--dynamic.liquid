            "type": "text",
            "label": "Mini heading"
          },
          {
            "id": "title",
            "type": "text",
            "label": "Heading"
          },
          {
            "id": "subheading",
            "type": "richtext",
            "label": "Subheading"
          },
          {
            "id": "max_width_subheading",
            "type": "range",
            "label": "Text max width",
            "min": 20,
            "max": 50,
            "step": 2,
            "default": 30
          },
          {
            "id": "link_text",
            "type": "text",
            "label": "Button label"
          },
          {
            "id": "link",
            "type": "url",
            "label": "Button link"
          },
          {
            "id": "alignment",
            "type": "select",
            "label": "Text alignment",
            "options": [
              { "label": "Top left", "value": "left_top" },
              { "label": "Top center", "value": "center_top" },
